<Window x:Class="CS_ASP_017LPB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_ASP_017LPB"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Calendar x:Name="myCalendar" HorizontalAlignment="Left" Margin="80,87,0,0"
                  VerticalAlignment="Top"
                  SelectionMode="SingleDate"
                  SelectedDatesChanged="myCalendar_SelectedDatesChanged"/>
        <Calendar x:Name="mySecondCalendar" HorizontalAlignment="Left" Margin="323,87,0,0" 
                  VerticalAlignment="Top"
                  SelectionMode="SingleDate"
                  SelectedDatesChanged="mySecondCalendar_SelectedDatesChanged"/>
        <Label x:Name="resultLabel" Content="[Result Label]" HorizontalAlignment="Left" Margin="80,314,0,0" VerticalAlignment="Top" FontSize="14" Height="51" Width="138"/>
        <Button Content="Push Me!" HorizontalAlignment="Left" Margin="323,311,0,0" VerticalAlignment="Top" Width="179" Height="37" FontSize="14" Click="Button_Click"/>
        <Calendar x:Name="BlackOutCalendar" HorizontalAlignment="Left" Margin="568,87,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
